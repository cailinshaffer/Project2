<%- include('../partials/header', {user}) %>
<h3>Pet Details:</h3>
<p>Name: <%=data.name%></p>
<p>Breed: <%=data.breeds.primary%> </p>
<p>Age: <%=data.age%></p>
<p>Size: <%=data.size%></p>
<p>Coat: <%=data.coat%></p>
<p>Spayed/Nuetered: <%=data.attributes.spayed_neutered%></p>
<p>House trained: <%=data.attributes.house_trained%></p>
<p>Description: <%=data.tags%></p>




<form method="POST" action="/comments">
    <label for="name">User name:</label>
    <input id="name"type="text" placeholder="User name here..."name="name" autocomplete="off" required>

    <label for="comment">Comment:</label>
    <input id="comment" type="text" placeholder="Enter you comment" name="comment" autocomplete="off" required>
      <input hidden name="petId" value="<%=data.id%>">
      <input hidden name="type" value="<%=data.type%>">
      <input hidden name="breed" value="<%=data.breeds.primary%>">
      <!-- <input hidden name="" value""> -->
    <button type="submit">Add comment:</button>
</form>




<h2>Comments:</h2>

<div>
  <% comments.forEach(comment =>{ %>
    <p> <%= comment.id %> has this to say:</p>
    <p><%= comment.comment %></p>
  <% }) %>
</div>

<form>
  <ul>
    <% comments.forEach((comment, index) => { %>
        <form method="POST" action="/comment/<%= index %>/?_method=DELETE">
            <button type="submit">Delete comment</button>
        </form>
    </li>
    <% }); %>
  </ul>
  </form>








<%- include('../partials/footer') %>